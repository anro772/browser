<ui:FluentWindow x:Class="BrowserApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:controls="clr-namespace:BrowserApp.UI.Controls"
        xmlns:converters="clr-namespace:BrowserApp.UI.Converters"
        xmlns:vm="clr-namespace:BrowserApp.UI.ViewModels"
        xmlns:views="clr-namespace:BrowserApp.UI.Views"
        mc:Ignorable="d"
        Title="{Binding PageTitle}"
        Height="1000"
        Width="1600"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ExtendsContentIntoTitleBar="True">

    <ui:FluentWindow.Resources>
        <converters:CertificateStatusToIconConverter x:Key="CertStatusToIcon"/>
        <converters:CertificateStatusToColorConverter x:Key="CertStatusToColor"/>
    </ui:FluentWindow.Resources>

    <ui:FluentWindow.InputBindings>
        <!-- Tab management -->
        <KeyBinding Gesture="Ctrl+T" Command="{Binding TabStrip.NewTabCommand}"/>
        <KeyBinding Gesture="Ctrl+W" Command="{Binding TabStrip.CloseActiveTabCommand}"/>
        <KeyBinding Gesture="Ctrl+Tab" Command="{Binding TabStrip.NextTabCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+Tab" Command="{Binding TabStrip.PreviousTabCommand}"/>

        <!-- Navigation -->
        <KeyBinding Gesture="Ctrl+L" Command="{Binding FocusAddressBarCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Gesture="Ctrl+R" Command="{Binding RefreshCommand}"/>
        <KeyBinding Gesture="Alt+Left" Command="{Binding BackCommand}"/>
        <KeyBinding Gesture="Alt+Right" Command="{Binding ForwardCommand}"/>

        <!-- Page actions -->
        <KeyBinding Gesture="Ctrl+F" Command="{Binding FindInPageCommand}"/>
        <KeyBinding Gesture="Ctrl+OemPlus" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Gesture="Ctrl+OemMinus" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Gesture="Ctrl+D0" Command="{Binding ZoomResetCommand}"/>
        <KeyBinding Key="F11" Command="{Binding ToggleFullScreenCommand}"/>

        <!-- Bookmarks -->
        <KeyBinding Gesture="Ctrl+D" Command="{Binding BookmarkViewModel.ToggleBookmarkCommand}"/>

        <!-- Tools -->
        <KeyBinding Gesture="Ctrl+Shift+N" Command="{Binding ToggleSidebarCommand}"/>
    </ui:FluentWindow.InputBindings>

    <Grid Style="{StaticResource FadeInOnLoadModern}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Tab Strip -->
        <Grid Grid.Row="0"
              Background="{StaticResource BgElevatedBrush}"
              MinHeight="36">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <!-- Drag region for custom title bar -->
            <Border x:Name="TitlebarDragRegion"
                    Grid.ColumnSpan="3"
                    Background="Transparent"
                    MouseLeftButtonDown="TitlebarDragRegion_MouseLeftButtonDown"/>

            <!-- Tab items (scrollable) -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="8,0,0,0">
                <ItemsControl x:Name="TabItemsControl"
                              ItemsSource="{Binding TabStrip.Tabs}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:TabItemControl
                                TabActivated="TabItem_Activated"
                                TabCloseRequested="TabItem_CloseRequested"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- New tab button -->
            <Button Grid.Column="1"
                    Style="{StaticResource NewTabButtonStyle}"
                    Click="NewTabButton_Click"/>

            <!-- Window caption buttons area (space for min/max/close) -->
            <ui:TitleBar Grid.Column="2"
                         ShowMinimize="True"
                         ShowMaximize="True"
                         ShowClose="True"/>
        </Grid>

        <!-- Row 1: Navigation Bar -->
        <Border Grid.Row="1"
                Background="{StaticResource BgElevatedBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="0,0,0,1">
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="8,4">
                <StackPanel.Resources>
                    <Style TargetType="ui:Button" BasedOn="{StaticResource GlassToolbarButtonStyle}"/>
                </StackPanel.Resources>
                <ui:Button ToolTip="Back (Alt+Left)"
                           Command="{Binding BackCommand}"
                           IsEnabled="{Binding CanGoBack}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowLeft24"/>
                    </ui:Button.Icon>
                </ui:Button>
                <ui:Button ToolTip="Forward (Alt+Right)"
                           Command="{Binding ForwardCommand}"
                           IsEnabled="{Binding CanGoForward}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowRight24"/>
                    </ui:Button.Icon>
                </ui:Button>
                <ui:Button ToolTip="Refresh (F5)"
                           Command="{Binding RefreshCommand}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowClockwise24"/>
                    </ui:Button.Icon>
                </ui:Button>
                <ui:Button ToolTip="Home"
                           Command="{Binding HomeCommand}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Home24"/>
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>

            <!-- Address Bar with Security Indicator and Autocomplete Popup -->
            <Grid Grid.Column="1">
                <Border Style="{StaticResource AddressBarContainerStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Security lock icon - uses cert status when available -->
                        <ui:SymbolIcon Grid.Column="0"
                                       Symbol="{Binding CertificateStatus, Converter={StaticResource CertStatusToIcon}}"
                                       Foreground="{Binding CertificateStatus, Converter={StaticResource CertStatusToColor}}"
                                       Style="{StaticResource SecurityIndicatorStyle}"/>

                        <!-- Address text box -->
                        <TextBox Grid.Column="1"
                                 x:Name="AddressBar"
                                 Text="{Binding AddressBarText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 Padding="4,6"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 CaretBrush="{DynamicResource TextFillColorPrimaryBrush}"
                                 VerticalAlignment="Center"
                                 PreviewKeyDown="AddressBar_PreviewKeyDown"
                                 LostFocus="AddressBar_LostFocus">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding NavigateCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Autocomplete Popup -->
                <Popup x:Name="AutocompletePopup"
                       PlacementTarget="{Binding ElementName=AddressBar}"
                       Placement="Bottom"
                       StaysOpen="False"
                       IsOpen="{Binding IsSuggestionsOpen, Mode=TwoWay}"
                       Width="{Binding ActualWidth, ElementName=AddressBar}"
                       AllowsTransparency="True"
                       PopupAnimation="Fade">
                    <Border Background="{StaticResource BgSurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="0,0,8,8"
                            MaxHeight="320">
                        <ListBox x:Name="SuggestionsListBox"
                                 ItemsSource="{Binding Suggestions}"
                                 SelectedItem="{Binding SelectedSuggestion}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionChanged="SuggestionsListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ui:SymbolIcon Grid.Column="0" Grid.RowSpan="2"
                                                       Symbol="Globe24"
                                                       FontSize="16"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                                        <TextBlock Grid.Column="1" Grid.Row="0"
                                                   Text="{Binding Title}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Grid.Column="1" Grid.Row="1"
                                                   Text="{Binding Url}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>

            <!-- Toolbar Buttons -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="4,0,8,0">
                <StackPanel.Resources>
                    <Style TargetType="ui:Button" BasedOn="{StaticResource GlassToolbarButtonStyle}"/>
                </StackPanel.Resources>
                <!-- Loading Indicator -->
                <ui:ProgressRing IsIndeterminate="True"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                                 Width="24"
                                 Height="24"
                                 Margin="4,0"/>

                <!-- Bookmark Toggle -->
                <ui:Button ToolTip="Bookmark this page (Ctrl+D)"
                           Command="{Binding BookmarkViewModel.ToggleBookmarkCommand}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Star24"
                                       Filled="{Binding BookmarkViewModel.IsCurrentPageBookmarked}"/>
                    </ui:Button.Icon>
                </ui:Button>

                <!-- Tools Workspace -->
                <ui:Button ToolTip="Open Tools Workspace"
                           x:Name="ToolsButton"
                           Click="ToolsButton_Click">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="BuildingShop24"/>
                    </ui:Button.Icon>
                </ui:Button>

                <!-- Sidebar Toggle -->
                <ui:Button ToolTip="Toggle Sidebar (Ctrl+Shift+N)"
                           Command="{Binding ToggleSidebarCommand}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="PanelRight24"/>
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>
        </Grid>
        </Border>

        <!-- Row 2: Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Browser content area with find bar, certificate warning, and download notification -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Find Bar (top, initially hidden) -->
                <controls:FindBar Grid.Row="0" x:Name="FindBarControl" Panel.ZIndex="20"/>

                <!-- Certificate Warning Bar (initially hidden) -->
                <controls:CertificateWarningBar Grid.Row="1" x:Name="CertificateWarningBarControl" Panel.ZIndex="19"/>

                <!-- WebView2 Content Host -->
                <Grid Grid.Row="2" x:Name="WebViewHost"/>

                <!-- New Tab Page Overlay -->
                <ContentControl Grid.Row="2"
                                x:Name="NewTabPageOverlay"
                                Visibility="Collapsed"
                                Panel.ZIndex="10"/>

                <!-- Download Notification (bottom, initially hidden) -->
                <controls:DownloadNotification Grid.Row="3" x:Name="DownloadNotificationControl"/>
            </Grid>

            <!-- Sidebar Panel with Icon Strip -->
            <Border Grid.Column="1"
                    Width="400"
                    Background="{StaticResource BgElevatedBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisibility}}"
                    Style="{StaticResource SidebarPanelAnimatedStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0: Icon strip navigation -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BgPrimaryBrush}"
                            BorderBrush="{StaticResource BorderSubtleBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="8,6">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <RadioButton x:Name="SidebarTabCopilot"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Copilot"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Copilot, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="Bot24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabDashboard"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Dashboard"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dashboard, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="Shield24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabBookmarks"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Bookmarks"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Bookmarks, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="Star24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabDownloads"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Downloads"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Downloads, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="ArrowDownload24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabNetwork"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Network"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Network, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="Globe24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabHistory"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="History"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=History, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="History24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SidebarTabLogs"
                                         Style="{StaticResource SidebarIconButton}"
                                         ToolTip="Logs"
                                         IsChecked="{Binding SelectedSidebarSection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Logs, Mode=TwoWay}">
                                <ui:SymbolIcon Symbol="SlideText24" FontSize="18" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Row 1: Tab content panels (visibility-toggled) -->
                    <Grid Grid.Row="1">
                        <ContentControl x:Name="CopilotContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Copilot}"/>
                        <ContentControl x:Name="DashboardContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Dashboard}"/>
                        <ContentControl x:Name="BookmarksContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Bookmarks}"/>
                        <ContentControl x:Name="DownloadsContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Downloads}"/>
                        <ContentControl x:Name="NetworkMonitorContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Network}"/>
                        <ContentControl x:Name="HistoryContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=History}"/>
                        <ContentControl x:Name="LogViewerContent"
                                        Style="{StaticResource SidebarSectionAnimatedStyle}"
                                        Visibility="{Binding SelectedSidebarSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Logs}"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- In-window tools workspace overlay -->
            <Border x:Name="WorkspaceOverlay"
                    Grid.ColumnSpan="2"
                    Margin="16"
                    Panel.ZIndex="30"
                    Style="{StaticResource WorkspaceOverlayAnimatedStyle}"
                    Visibility="{Binding IsWorkspaceOpen, Converter={StaticResource BoolToVisibility}}">
                <Border Style="{StaticResource WorkspaceOverlaySurfaceStyle}">
                    <ContentControl x:Name="WorkspaceHostContainer"/>
                </Border>
            </Border>
        </Grid>

        <!-- Row 3: Status Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource BgElevatedBrush}"
                Padding="8,4">
            <TextBlock Text="{Binding StatusBarText}"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Border>
    </Grid>
</ui:FluentWindow>
