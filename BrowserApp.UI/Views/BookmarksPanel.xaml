<UserControl x:Class="BrowserApp.UI.Views.BookmarksPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Loaded="UserControl_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BgSurfaceBrush}" CornerRadius="8" BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="1" Padding="16" Margin="8">
            <StackPanel>
                <TextBlock Text="Bookmarks"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="0,4,0,0">
                    <Run Text="{Binding Bookmarks.Count, Mode=OneWay}"/>
                    <Run Text="saved pages"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Bookmarks List -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Bookmarks}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  Background="Transparent"
                  BorderThickness="0"
                  Margin="4,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Cursor="Hand">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick"
                                              Command="{Binding DataContext.NavigateToBookmarkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"/>
                            </StackPanel.InputBindings>

                            <TextBlock Text="{Binding Title}"
                                       FontSize="13"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="{Binding Url}"
                                       FontSize="11"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Opacity="0.7"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="&#xE711;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="10"
                                Width="24" Height="24"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center"
                                ToolTip="Remove bookmark"
                                Command="{Binding DataContext.RemoveBookmarkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty state -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding Bookmarks.Count, Converter={StaticResource CountToVisibility}}">
            <ui:SymbolIcon Symbol="Star24"
                           FontSize="48"
                           Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center"/>
            <TextBlock Text="No bookmarks yet"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="Press Ctrl+D to bookmark a page"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>
