<ui:FluentWindow x:Class="BrowserApp.UI.Views.ExtensionManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:BrowserApp.UI.ViewModels"
        Title="Extensions"
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Extensions"
                       FontSize="24"
                       FontWeight="SemiBold"/>
            <TextBlock Text="Manage browser extensions (unpacked Chromium extensions)"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Extensions List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ui:Button Content="Add Extension..."
                           Icon="{ui:SymbolIcon Add24}"
                           Command="{Binding InstallExtensionCommand}"
                           Appearance="Primary"
                           HorizontalAlignment="Stretch"
                           Margin="0,0,0,12"/>

                <ItemsControl ItemsSource="{Binding Extensions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource BorderSubtleBrush}"
                                    BorderThickness="1"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ui:SymbolIcon Grid.Column="0"
                                                   Symbol="PuzzlePiece24"
                                                   FontSize="24"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource AccentBrush}"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                            <Run Text="v"/>
                                            <Run Text="{Binding Version, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <ToggleButton Grid.Column="2"
                                                  IsChecked="{Binding IsEnabled}"
                                                  Margin="8,0"
                                                  VerticalAlignment="Center"
                                                  Command="{Binding DataContext.ToggleExtensionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding}"/>

                                    <ui:Button Grid.Column="3"
                                               Icon="{ui:SymbolIcon Delete24}"
                                               ToolTip="Remove extension"
                                               Command="{Binding DataContext.UninstallExtensionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"
                                               Appearance="Secondary"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <StackPanel Visibility="{Binding Extensions.Count, Converter={StaticResource CountToVisibility}}"
                            HorizontalAlignment="Center"
                            Margin="0,32,0,0">
                    <ui:SymbolIcon Symbol="PuzzlePiece24"
                                   FontSize="48"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="No extensions installed"
                               FontSize="14"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <ui:Button Content="Close"
                       IsCancel="True"
                       Click="CloseButton_Click"
                       Appearance="Primary"
                       Padding="24,8"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
