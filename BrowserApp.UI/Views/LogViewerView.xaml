<UserControl x:Class="BrowserApp.UI.Views.LogViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:BrowserApp.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             d:DataContext="{d:DesignInstance vm:LogViewerViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with controls -->
        <Border Grid.Row="0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="1"
                Margin="8"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Debug Console"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0">
                        <Run Text="Real-time application logs and debug output"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Clear"
                               Command="{Binding ClearCommand}"
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Secondary"
                               Margin="0,0,8,0"/>
                    <ui:Button Content="Copy All"
                               Command="{Binding CopyAllCommand}"
                               Icon="{ui:SymbolIcon Copy24}"
                               Appearance="Secondary"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Log display area -->
        <Border Grid.Row="1"
                Background="{StaticResource BgPrimaryBrush}"
                CornerRadius="8"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="1"
                Margin="8,0,8,8"
                Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filters -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox Content="Debug"
                              IsChecked="{Binding ShowDebug}"
                              ToolTip="Show debug messages"
                              Margin="0,0,12,0"/>
                    <CheckBox Content="Info"
                              IsChecked="{Binding ShowInfo}"
                              ToolTip="Show info messages"
                              Margin="0,0,12,0"/>
                    <CheckBox Content="Warning"
                              IsChecked="{Binding ShowWarning}"
                              ToolTip="Show warnings"
                              Margin="0,0,12,0"/>
                    <CheckBox Content="Error"
                              IsChecked="{Binding ShowError}"
                              ToolTip="Show errors"
                              Margin="0,0,12,0"/>
                    <CheckBox Content="Auto-scroll"
                              IsChecked="{Binding AutoScroll}"
                              Margin="20,0,0,0"
                              ToolTip="Automatically scroll to latest log"/>
                </StackPanel>

                <!-- Log entries -->
                <ScrollViewer Grid.Row="1"
                              x:Name="LogScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LogEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderSubtleBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="4,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding FormattedTime}"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Top"/>

                                        <!-- Level badge -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding LevelBadge}"
                                                   FontSize="14"
                                                   VerticalAlignment="Top"
                                                   Margin="4,0,0,0"/>

                                        <!-- Message -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Message}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Top"
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
