<UserControl x:Class="BrowserApp.UI.Views.DownloadManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:BrowserApp.UI.ViewModels"
             d:DataContext="{d:DesignInstance vm:DownloadManagerViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="4"
                Margin="8"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Downloads"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0">
                        <Run Text="{Binding Downloads.Count, Mode=OneWay}"/>
                        <Run Text="downloads"/>
                    </TextBlock>
                </StackPanel>
                <ui:Button Grid.Column="1"
                           Icon="{ui:SymbolIcon Delete24}"
                           Command="{Binding ClearCompletedCommand}"
                           ToolTip="Clear completed downloads"
                           Appearance="Secondary"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Downloads List -->
        <Border Grid.Row="1"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="4"
                Margin="8,0,8,8">
            <Grid>
                <ListView ItemsSource="{Binding Downloads}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,10" Background="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <ui:SymbolIcon Grid.Column="0" Grid.RowSpan="3"
                                                   Symbol="ArrowDownload24"
                                                   FontSize="24"
                                                   Margin="0,0,12,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"/>

                                    <TextBlock Grid.Column="1" Grid.Row="0"
                                               Text="{Binding FileName}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>

                                    <ProgressBar Grid.Column="1" Grid.Row="1"
                                                 Value="{Binding Progress}"
                                                 Maximum="100"
                                                 Height="3"
                                                 Margin="0,4,0,2"/>

                                    <TextBlock Grid.Column="1" Grid.Row="2"
                                               Text="{Binding Status}"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                                    <StackPanel Grid.Column="2" Grid.RowSpan="3"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="8,0,0,0">
                                        <ui:Button Content="Open"
                                                   Padding="8,4"
                                                   Margin="0,0,4,0"
                                                   Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                   CommandParameter="{Binding}"
                                                   Appearance="Secondary">
                                            <ui:Button.Style>
                                                <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="completed">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Style>
                                            </ui:Button.Style>
                                        </ui:Button>
                                        <ui:Button Content="Folder"
                                                   Padding="8,4"
                                                   Command="{Binding DataContext.ShowInFolderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                   CommandParameter="{Binding}"
                                                   Appearance="Secondary">
                                            <ui:Button.Style>
                                                <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="completed">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Style>
                                            </ui:Button.Style>
                                        </ui:Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding Downloads.Count, Converter={StaticResource CountToVisibility}}">
                    <ui:SymbolIcon Symbol="ArrowDownload24"
                                   FontSize="48"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="No downloads yet"
                               FontSize="14"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
