<UserControl x:Class="BrowserApp.UI.Views.NewTabPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid Style="{StaticResource FadeInOnLoadModern}">
        <Border Background="{StaticResource BgPrimaryBrush}"/>

        <!-- Center content -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="600"
                    Margin="0,0,0,80">

            <!-- Branding -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,32">
                <TextBlock Text="Privacy Browser"
                           FontSize="42"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding GreetingText}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Search Bar -->
            <Border Style="{StaticResource PillInputContainerStyle}"
                    Margin="0,0,0,40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Grid.Column="0"
                                   Symbol="Search24"
                                   Margin="12,0,8,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                    <TextBox Grid.Column="1"
                             x:Name="SearchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Padding="4,10"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                             CaretBrush="{DynamicResource TextFillColorPrimaryBrush}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Frequent Sites Grid -->
            <TextBlock Text="Frequently Visited"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

            <ItemsControl ItemsSource="{Binding FrequentSites}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.NavigateToSiteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="4"
                                Padding="8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="SiteBorder"
                                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            CornerRadius="12"
                                            BorderBrush="{StaticResource BorderSubtleBrush}"
                                            BorderThickness="1"
                                            Padding="12"
                                            MinWidth="120"
                                            MinHeight="80"
                                            RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Border.RenderTransform>
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <!-- Initial circle -->
                                            <Border Width="40" Height="40"
                                                    CornerRadius="20"
                                                    Margin="0,0,0,8"
                                                    HorizontalAlignment="Center">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{StaticResource Accent}" Opacity="0.15"/>
                                                </Border.Background>
                                                <TextBlock Text="{Binding Initial}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Foreground="{StaticResource AccentBrush}"/>
                                            </Border>
                                            <!-- Domain -->
                                            <TextBlock Text="{Binding Domain}"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"
                                                       HorizontalAlignment="Center"
                                                       MaxWidth="100"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="SiteBorder" Property="Background" Value="{StaticResource BgSurfaceHoverBrush}"/>
                                            <Setter TargetName="SiteBorder" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.03" ScaleY="1.03"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
