<UserControl x:Class="BrowserApp.UI.Views.Workspaces.MarketplaceWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:views="clr-namespace:BrowserApp.UI.Views"
             Loaded="MarketplaceWorkspaceView_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <views:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>

    <Grid Style="{StaticResource FadeInOnLoadModern}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Marketplace" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,4"/>
            <TextBlock Text="Browse and install community rules" Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding TotalRules}" FontWeight="SemiBold"/>
                <TextBlock Text=" rules available" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" Command="{Binding LoadRulesCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1" CornerRadius="8">
                <DataGrid ItemsSource="{Binding Rules}"
                          Style="{StaticResource ThemedDataGrid}"
                          SelectedItem="{Binding SelectedRule}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          Background="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                        <DataGridTextColumn Header="Site" Binding="{Binding Site}" Width="120"/>
                        <DataGridTextColumn Header="Author" Binding="{Binding AuthorUsername}" Width="100"/>
                        <DataGridTextColumn Header="Downloads" Binding="{Binding DownloadCount}" Width="80"/>

                        <DataGridTemplateColumn Header="" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button Content="{Binding InstallButtonText}"
                                               Appearance="Primary"
                                               Command="{Binding DataContext.InstallRuleCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               CommandParameter="{Binding}"
                                               IsEnabled="{Binding IsInstalled, Converter={StaticResource InverseBoolConverter}}"
                                               Padding="8,4"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Background="{StaticResource BgPrimaryBrush}"
                    Opacity="0.82"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ui:ProgressRing IsIndeterminate="True"/>
            </Border>
        </Grid>

        <TextBlock Grid.Row="4"
                   Text="{Binding StatusMessage}"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Margin="0,8,0,0"
                   TextWrapping="Wrap"/>
    </Grid>
</UserControl>
