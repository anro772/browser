<UserControl x:Class="BrowserApp.UI.Views.CopilotSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:vm="clr-namespace:BrowserApp.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="380"
             d:DataContext="{d:DesignInstance vm:CopilotSidebarViewModel}"
             Loaded="OnLoaded">

    <UserControl.Resources>
        <!-- User message bubble style: right-aligned, accent tint -->
        <DataTemplate x:Key="UserMessageTemplate">
            <Grid Margin="40,4,8,4" HorizontalAlignment="Right">
                <Border Background="#15A855F7"
                        BorderBrush="#50A855F7"
                        BorderThickness="1"
                        CornerRadius="12,12,2,12"
                        Padding="12,8"
                        MaxWidth="300">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   LineHeight="19"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Assistant message bubble style: left-aligned, subtle surface -->
        <DataTemplate x:Key="AssistantMessageTemplate">
            <Grid Margin="8,4,40,4" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar indicator -->
                <Border Grid.Column="0"
                        Width="24" Height="24"
                        CornerRadius="12"
                        Background="#22A855F7"
                        VerticalAlignment="Top"
                        Margin="0,2,8,0">
                    <ui:SymbolIcon Symbol="Bot24"
                                   FontSize="12"
                                   Foreground="#A855F7"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Column="1"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="12,12,12,2"
                        Padding="12,8"
                        MaxWidth="280">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   LineHeight="19"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                        <!-- Streaming indicator -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,4,0,0"
                                    Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVisibility}}">
                            <ui:ProgressRing IsIndeterminate="True"
                                             Width="12" Height="12"/>
                            <TextBlock Text="Thinking..."
                                       FontSize="10"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Left"
                                   Margin="0,4,0,0"
                                   Visibility="{Binding IsStreaming, Converter={StaticResource BoolToVisibilityInverse}}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Rule suggestion template: assistant bubble with Apply button -->
        <DataTemplate x:Key="RuleSuggestionTemplate">
            <Grid Margin="8,4,40,4" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Width="24" Height="24"
                        CornerRadius="12"
                        Background="#1534D399"
                        VerticalAlignment="Top"
                        Margin="0,2,8,0">
                    <ui:SymbolIcon Symbol="Shield24"
                                   FontSize="12"
                                   Foreground="#34D399"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Column="1"
                        Background="#0C34D399"
                        BorderBrush="#3334D399"
                        BorderThickness="1"
                        CornerRadius="12,12,12,2"
                        Padding="12,8"
                        MaxWidth="280">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   LineHeight="19"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ui:Button Content="Apply Rule"
                                   Icon="{ui:SymbolIcon Checkmark24}"
                                   Appearance="Success"
                                   FontSize="11"
                                   Padding="8,4"
                                   Margin="0,8,0,0"
                                   Command="{Binding DataContext.ApplyRuleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   CommandParameter="{Binding SuggestedRuleJson}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <!-- Template selector via style triggers on ItemsControl -->
        <Style x:Key="ChatMessageContainerStyle" TargetType="ContentPresenter">
            <Setter Property="ContentTemplate" Value="{StaticResource AssistantMessageTemplate}"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="12"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                             From="12" To="0" Duration="0:0:0.15"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <DataTrigger Binding="{Binding Role}" Value="user">
                    <Setter Property="ContentTemplate" Value="{StaticResource UserMessageTemplate}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRuleSuggestion}" Value="True">
                    <Setter Property="ContentTemplate" Value="{StaticResource RuleSuggestionTemplate}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="#30A855F7"
                BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Copilot"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Connection status dot -->
                    <Ellipse Grid.Column="1"
                             Width="8" Height="8"
                             Margin="8,0,0,0"
                             VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#F87171"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOllamaConnected}" Value="True">
                                        <Setter Property="Fill" Value="#34D399"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <!-- Clear chat button -->
                    <ui:Button Grid.Column="3"
                               Icon="{ui:SymbolIcon Delete24}"
                               ToolTip="Clear chat"
                               Command="{Binding ClearChatCommand}"
                               Appearance="Secondary"
                               Padding="4"
                               FontSize="14"/>
                </Grid>

                <!-- Model selector row -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Model"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AvailableModels}"
                              SelectedItem="{Binding SelectedModel}"
                              FontSize="12"
                              Height="28"
                              IsEnabled="{Binding IsOllamaConnected}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Chat area -->
        <Grid Grid.Row="1">
            <!-- Messages scroll area (visible when connected) -->
            <ScrollViewer x:Name="ChatScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsOllamaConnected, Converter={StaticResource BoolToVisibility}}">
                <ItemsControl ItemsSource="{Binding Messages}"
                              Padding="0,8"
                              ItemContainerStyle="{StaticResource ChatMessageContainerStyle}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <!-- Disconnected empty state -->
            <Border Visibility="{Binding IsOllamaConnected, Converter={StaticResource BoolToVisibilityInverse}}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="24">

                    <!-- Disconnected icon -->
                    <Border Width="64" Height="64"
                            CornerRadius="32"
                            Background="#15A855F7"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="PlugDisconnected24"
                                       FontSize="28"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Ollama Not Connected"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Start Ollama to use the AI copilot.&#x0a;Install from ollama.com and run a model."
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,8,0,16"
                               LineHeight="18"/>

                    <ui:Button Content="Retry Connection"
                               Icon="{ui:SymbolIcon ArrowSync24}"
                               Command="{Binding CheckConnectionCommand}"
                               Appearance="Primary"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding ConnectionStatus}"
                               FontSize="11"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Input area -->
        <Border Grid.Row="2"
                Background="{StaticResource BgElevatedBrush}"
                BorderBrush="{StaticResource BorderSubtleBrush}"
                BorderThickness="0,1,0,0"
                Padding="8"
                Visibility="{Binding IsOllamaConnected, Converter={StaticResource BoolToVisibility}}">
            <StackPanel>
                <!-- Generate Rules toolbar -->
                <ui:Button Content="Generate Rules for Page"
                           Icon="{ui:SymbolIcon Shield24}"
                           Command="{Binding GenerateRulesForCurrentPageCommand}"
                           Appearance="Secondary"
                           HorizontalAlignment="Stretch"
                           FontSize="12"
                           Margin="0,0,0,8"/>

                <!-- Pill-shaped input container -->
                <Border Background="{StaticResource BgSurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="20"
                        Padding="4,2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Input TextBox (transparent, no border â€” pill provides chrome) -->
                        <TextBox Grid.Column="0"
                                 x:Name="ChatInput"
                                 Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="13"
                                 Padding="12,6"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 MaxHeight="80"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 CaretBrush="{DynamicResource TextFillColorPrimaryBrush}"
                                 VerticalAlignment="Center"
                                 PreviewKeyDown="ChatInput_PreviewKeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Tag" Value="Ask the copilot..."/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Embedded Send / Stop buttons inside the pill -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,4,0">

                            <!-- Send button (circular, visible when not generating) -->
                            <ui:Button Icon="{ui:SymbolIcon Send24}"
                                       ToolTip="Send message (Enter)"
                                       Command="{Binding SendMessageCommand}"
                                       Appearance="Primary"
                                       Width="32" Height="32"
                                       Padding="0"
                                       CornerRadius="16"
                                       Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityInverse}}"/>

                            <!-- Stop button (circular, visible when generating) -->
                            <ui:Button Icon="{ui:SymbolIcon Stop24}"
                                       ToolTip="Stop generation"
                                       Command="{Binding StopGenerationCommand}"
                                       Appearance="Caution"
                                       Width="32" Height="32"
                                       Padding="0"
                                       CornerRadius="16"
                                       Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibility}}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
