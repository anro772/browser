<UserControl x:Class="BrowserApp.UI.Controls.DownloadNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Visibility="Collapsed"
             x:Name="DownloadRoot">

    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            Padding="12,8">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Download icon -->
            <ui:SymbolIcon Grid.Column="0"
                           Symbol="ArrowDownload24"
                           FontSize="20"
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"/>

            <!-- Filename and progress -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="FileNameText"
                           Text="Downloading..."
                           FontSize="13"
                           TextTrimming="CharacterEllipsis"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <ProgressBar x:Name="DownloadProgress"
                             Height="3"
                             Margin="0,4,0,0"
                             IsIndeterminate="True"/>
            </StackPanel>

            <!-- Open file -->
            <Button Grid.Column="2"
                    x:Name="OpenButton"
                    Content="Open"
                    Padding="12,4"
                    Margin="8,0"
                    Visibility="Collapsed"
                    Click="OpenButton_Click"/>

            <!-- Show in folder -->
            <Button Grid.Column="3"
                    x:Name="ShowInFolderButton"
                    Content="Show in folder"
                    Padding="12,4"
                    Margin="0,0,8,0"
                    Visibility="Collapsed"
                    Click="ShowInFolderButton_Click"/>

            <!-- Close -->
            <Button Grid.Column="4"
                    Content="&#xE711;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="10"
                    Width="24" Height="24"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</UserControl>
