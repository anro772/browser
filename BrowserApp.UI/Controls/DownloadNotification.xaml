<UserControl x:Class="BrowserApp.UI.Controls.DownloadNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Visibility="Collapsed"
             x:Name="DownloadRoot">

    <Border Background="{StaticResource BgGlassHeaderBrush}"
            BorderBrush="{StaticResource AccentBorderBrush}"
            BorderThickness="0,1,0,0"
            Padding="12,8">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Download icon -->
            <ui:SymbolIcon Grid.Column="0"
                           Symbol="ArrowDownload24"
                           FontSize="20"
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource AccentBrush}"/>

            <!-- Filename and progress -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="FileNameText"
                           Text="Downloading..."
                           FontSize="13"
                           TextTrimming="CharacterEllipsis"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <ProgressBar x:Name="DownloadProgress"
                             Height="3"
                             Margin="0,4,0,0"
                             IsIndeterminate="True"/>
            </StackPanel>

            <!-- Open file -->
            <ui:Button Grid.Column="2"
                       x:Name="OpenButton"
                       Content="Open"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       Padding="12,4"
                       Margin="8,0"
                       Visibility="Collapsed"
                       Click="OpenButton_Click"/>

            <!-- Show in folder -->
            <ui:Button Grid.Column="3"
                       x:Name="ShowInFolderButton"
                       Content="Show in folder"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       Padding="12,4"
                       Margin="0,0,8,0"
                       Visibility="Collapsed"
                       Click="ShowInFolderButton_Click"/>

            <!-- Close -->
            <ui:Button Grid.Column="4"
                       Icon="{ui:SymbolIcon Dismiss24}"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       Click="CloseButton_Click"/>
        </Grid>
    </Border>
</UserControl>
