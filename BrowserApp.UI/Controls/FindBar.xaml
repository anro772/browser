<UserControl x:Class="BrowserApp.UI.Controls.FindBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Visibility="Collapsed"
             x:Name="FindBarRoot">

    <Border Background="{StaticResource BgGlassHeaderBrush}"
            BorderBrush="{StaticResource AccentBorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="12,6"
            HorizontalAlignment="Right"
            MinWidth="360">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search input -->
            <TextBox Grid.Column="0"
                     x:Name="FindTextBox"
                     FontSize="13"
                     Padding="8,5"
                     Background="{StaticResource BgSurfaceHoverBrush}"
                     BorderThickness="1"
                     BorderBrush="{StaticResource AccentBorderBrush}"
                     Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                     CaretBrush="{DynamicResource TextFillColorPrimaryBrush}"
                     TextChanged="FindTextBox_TextChanged"
                     KeyDown="FindTextBox_KeyDown"/>

            <!-- Match count -->
            <TextBlock Grid.Column="1"
                       x:Name="MatchCountText"
                       Text=""
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="8,0"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

            <!-- Previous -->
            <ui:Button Grid.Column="2"
                       Icon="{ui:SymbolIcon ArrowLeft24}"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       ToolTip="Previous match"
                       Click="PreviousButton_Click"/>

            <!-- Next -->
            <ui:Button Grid.Column="3"
                       Icon="{ui:SymbolIcon ArrowRight24}"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       ToolTip="Next match"
                       Click="NextButton_Click"/>

            <!-- Close -->
            <ui:Button Grid.Column="4"
                       Icon="{ui:SymbolIcon Dismiss24}"
                       Style="{StaticResource GlassToolbarButtonStyle}"
                       ToolTip="Close (Escape)"
                       Click="CloseButton_Click"/>
        </Grid>
    </Border>
</UserControl>
