<UserControl x:Class="BrowserApp.UI.Controls.TabItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             x:Name="TabRoot">

    <Border x:Name="TabBorder"
            CornerRadius="8,8,0,0"
            Padding="10,6"
            Margin="1,4,1,0"
            MinWidth="60"
            MaxWidth="240"
            Cursor="Hand"
            MouseLeftButtonDown="TabBorder_MouseLeftButtonDown"
            MouseUp="TabBorder_MouseUp"
            Background="Transparent">

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                    </DataTrigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Favicon -->
            <Image Grid.Column="0"
                   Source="{Binding Favicon}"
                   Width="16" Height="16"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Loading spinner (replaces favicon when loading) -->
            <ui:ProgressRing Grid.Column="0"
                             IsIndeterminate="True"
                             Width="16" Height="16"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"/>

            <!-- Title -->
            <TextBlock Grid.Column="1"
                       Text="{Binding Title}"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <!-- Active indicator -->
            <Border Grid.Column="0" Grid.ColumnSpan="4"
                    Height="2"
                    VerticalAlignment="Bottom"
                    Margin="-10,-6"
                    CornerRadius="1,1,0,0"
                    Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibility}}">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource SystemAccentColorPrimary}"/>
                </Border.Background>
            </Border>

            <!-- Close button -->
            <Button Grid.Column="3"
                    x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Style="{StaticResource TabCloseButtonStyle}"/>
        </Grid>
    </Border>
</UserControl>
