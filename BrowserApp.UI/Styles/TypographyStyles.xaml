<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="AppFontFamily">Plus Jakarta Sans,Montserrat,Segoe UI</FontFamily>
    <FontFamily x:Key="AppMonoFontFamily">JetBrains Mono,Consolas</FontFamily>

    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="TextElement.Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style TargetType="UserControl">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
    </Style>

    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
    </Style>

    <Style x:Key="SectionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="12.5"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="MonoTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppMonoFontFamily}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
</ResourceDictionary>
