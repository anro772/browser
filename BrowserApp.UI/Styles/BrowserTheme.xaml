<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- ═══════════════════════════════════════════════════════════════
         OLED Black/Purple Theme — Core Palette
         ═══════════════════════════════════════════════════════════════ -->

    <!-- BACKGROUNDS -->
    <Color x:Key="BgPrimary">#0B0E12</Color>
    <Color x:Key="BgElevated">#11161D</Color>
    <Color x:Key="BgSurface">#171D26</Color>
    <Color x:Key="BgSurfaceHover">#1F2733</Color>
    <Color x:Key="BgSurfaceActive">#283241</Color>

    <SolidColorBrush x:Key="BgPrimaryBrush" Color="#0B0E12"/>
    <SolidColorBrush x:Key="BgElevatedBrush" Color="#11161D"/>
    <SolidColorBrush x:Key="BgSurfaceBrush" Color="#171D26"/>
    <SolidColorBrush x:Key="BgSurfaceHoverBrush" Color="#1F2733"/>
    <SolidColorBrush x:Key="BgSurfaceActiveBrush" Color="#283241"/>
    <SolidColorBrush x:Key="BgGlassHeaderBrush" Color="#131A23"/>

    <!-- ACCENT (Purple) -->
    <Color x:Key="Accent">#3B82F6</Color>
    <Color x:Key="AccentLight">#60A5FA</Color>
    <Color x:Key="AccentDark">#2563EB</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="AccentSubtleBrush" Color="#143B82F6"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#2E3B82F6"/>
    <SolidColorBrush x:Key="AccentBorderBrush" Color="#4C3B82F6"/>

    <!-- TEXT -->
    <Color x:Key="TextPrimary">#F3F6FA</Color>
    <Color x:Key="TextSecondary">#A8B3C7</Color>
    <Color x:Key="TextTertiary">#738099</Color>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A8B3C7"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#738099"/>

    <!-- SEMANTIC -->
    <Color x:Key="Success">#34D399</Color>
    <Color x:Key="Error">#F87171</Color>
    <Color x:Key="Warning">#FBBF24</Color>
    <Color x:Key="Info">#60A5FA</Color>

    <SolidColorBrush x:Key="SuccessBrush" Color="#34D399"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#60A5FA"/>

    <SolidColorBrush x:Key="SuccessSubtleBrush" Color="#1534D399"/>
    <SolidColorBrush x:Key="ErrorSubtleBrush" Color="#15F87171"/>
    <SolidColorBrush x:Key="WarningSubtleBrush" Color="#15FBBF24"/>
    <SolidColorBrush x:Key="InfoSubtleBrush" Color="#1560A5FA"/>

    <!-- BORDERS -->
    <Color x:Key="Border">#364255</Color>
    <Color x:Key="BorderSubtle">#283243</Color>

    <SolidColorBrush x:Key="BorderBrush" Color="#364255"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#283243"/>

    <!-- ═══════════════════════════════════════════════════════════════
         WPF-UI Theme Overrides
         ═══════════════════════════════════════════════════════════════ -->

    <!-- Application background -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#0B0E12"/>

    <!-- Control fills -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#171D26"/>
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#1F2733"/>
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#283241"/>
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="#11161D"/>

    <!-- Control strokes -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#364255"/>
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="#283243"/>
    <SolidColorBrush x:Key="ControlElevationBorderBrush" Color="#364255"/>

    <!-- Text fills -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#A8B3C7"/>
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#738099"/>
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#738099"/>

    <!-- Accent overrides -->
    <SolidColorBrush x:Key="SystemAccentColorPrimaryBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="SystemAccentColorSecondaryBrush" Color="#60A5FA"/>
    <SolidColorBrush x:Key="SystemAccentColorTertiaryBrush" Color="#2563EB"/>
    <Color x:Key="SystemAccentColorPrimary">#3B82F6</Color>
    <Color x:Key="SystemAccentColorSecondary">#60A5FA</Color>
    <Color x:Key="SystemAccentColorTertiary">#2563EB</Color>

    <!-- Button icon foreground overrides for dark theme -->
    <SolidColorBrush x:Key="ButtonForeground" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#60A5FA"/>
    <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="#738099"/>

    <!-- Subtle/secondary button overrides -->
    <SolidColorBrush x:Key="SubtleButtonForeground" Color="#A8B3C7"/>
    <SolidColorBrush x:Key="SubtleButtonForegroundPointerOver" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="SubtleButtonForegroundPressed" Color="#60A5FA"/>
    <SolidColorBrush x:Key="SubtleButtonForegroundDisabled" Color="#738099"/>
    <SolidColorBrush x:Key="SubtleButtonBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="SubtleButtonBackgroundPointerOver" Color="#1F2733"/>
    <SolidColorBrush x:Key="SubtleButtonBackgroundPressed" Color="#283241"/>

    <!-- ToggleButton icon overrides -->
    <SolidColorBrush x:Key="ToggleButtonForeground" Color="#A8B3C7"/>
    <SolidColorBrush x:Key="ToggleButtonForegroundPointerOver" Color="#F3F6FA"/>
    <SolidColorBrush x:Key="ToggleButtonForegroundChecked" Color="#60A5FA"/>

    <!-- ═══════════════════════════════════════════════════════════════
         Common Styles
         ═══════════════════════════════════════════════════════════════ -->

    <!-- Themed Card: surface bg, 8px radius, subtle border, padding -->
    <Style x:Key="ThemedCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <!-- Stat Card: for dashboard/network stats -->
    <Style x:Key="StatCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- Section Header: 16px SemiBold with primary text -->
    <Style x:Key="SectionHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Page Title: larger -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Subtitle -->
    <Style x:Key="SubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         DataGrid Styles
         ═══════════════════════════════════════════════════════════════ -->

    <Style x:Key="ThemedDataGrid" TargetType="DataGrid">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="RowHeight" Value="36"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="RowBackground" Value="Transparent"/>
        <Setter Property="AlternatingRowBackground" Value="#083B82F6"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="RowStyle" Value="{DynamicResource ThemedDataGridRow}"/>
        <Setter Property="ColumnHeaderStyle" Value="{DynamicResource ThemedDataGridColumnHeader}"/>
        <Setter Property="CellStyle" Value="{DynamicResource ThemedDataGridCell}"/>
    </Style>

    <Style x:Key="ThemedDataGridRow" TargetType="DataGridRow">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BgSurfaceHoverBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentSubtleBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ThemedDataGridColumnHeader" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource BgElevatedBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtleBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="ThemedDataGridCell" TargetType="DataGridCell">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridCell">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         ListView / ListBox Item Styles
         ═══════════════════════════════════════════════════════════════ -->

    <Style x:Key="ThemedListViewItem" TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="2,1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="ItemBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentSubtleBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentGlowBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ThemedListBoxItem" TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="2,1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="ItemBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentSubtleBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentGlowBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════
         ScrollBar Styling (thin, accent-colored)
         ═══════════════════════════════════════════════════════════════ -->

    <Style x:Key="ThemedScrollBarThumb" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{StaticResource AccentGlowBrush}"
                            CornerRadius="3"
                            Margin="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

