<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- Address bar container with security indicator -->
    <Style x:Key="AddressBarContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgSurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Security lock indicator style -->
    <Style x:Key="SecurityIndicatorStyle" TargetType="ui:SymbolIcon">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="8,0,4,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
