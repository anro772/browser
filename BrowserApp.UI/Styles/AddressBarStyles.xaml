<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!-- Address bar container with security indicator -->
    <Style x:Key="AddressBarContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgGlassHeaderBrush}"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Margin" Value="8,4"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BgSurfaceHoverBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentGlowBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Security lock indicator style -->
    <Style x:Key="SecurityIndicatorStyle" TargetType="ui:SymbolIcon">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="10,0,6,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
